{
    "name": "chrome-bookmark-helper",
    "version": "1.0",
    "description": "Chrome bookmark helper inside wall!",
    "permissions": [
        "storage",
        "https://*/*"
    ],
    "background": {
        "scripts": ["background.js", "note-bundle.js"],
        "persistent": false
    },
    "browser_action": 
     {
        "default_icon": {
            "16": "images/get_started16.png",
            "32": "images/get_started32.png",
            "48": "images/get_started48.png",
            "128": "images/get_started128.png"
        },
        "default_popup": "popup.html"
    },
    "manifest_version": 2
  }